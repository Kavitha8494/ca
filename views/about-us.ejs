                // Content element
                const contentP = document.createElement('p');
                contentP.className = 'news fs-6 lh-base';
                // Strip HTML tags for display
                const plainContent = stripHtml(item.content);
                contentP.textContent = plainContent;

                // If there's a link URL, wrap content in a link
                if (item.linkUrl) {
                  const linkWrapper = document.createElement('a');
                  linkWrapper.href = item.linkUrl;
                  linkWrapper.target = '_blank';
                  linkWrapper.style.textDecoration = 'none';
                  linkWrapper.style.color = 'inherit';
                  linkWrapper.appendChild(contentP);
